%link{ :rel => 'stylesheet', :href => 'http://yui.yahooapis.com/pure/0.6.0/pure-min.css'}

%h1{:align => 'center'} Hotels
- @hotels.each do |hotel|
  %h2= link_to hotel.title, hotel_path(hotel)
  %p Price: #{hotel.price_of_room}  $
  = image_tag hotel.image.url.to_s, width: '350'

%p= link_to 'Add Hotel', new_hotel_path

= paginate @hotels


